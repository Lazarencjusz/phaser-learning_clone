{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES6",
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "types": ["phaser"],
    "paths": {
      "*": ["node_modules/*"],
      "@assets/*": ["./assets/*"],
      "@common/*": ["./src/common/*"],
      "@main/*": ["src/main/*"],
      "@app/*": ["./src/app/*"],
      "@src/*": ["./src/*"],
      "@misc/*": ["./misc/*"]
    }
  },
  "include": ["src/**/*", "tools/**/*"]
}
